<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= typeof title !=='undefined' ? title : 'Lớp học tiếng Nhật SMV' %>
    </title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <!-- Remixicon for line icons -->
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <%- typeof style !=='undefined' ? style : '' %>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
        <style>
            body {
                font-family: 'Roboto', Arial, sans-serif;
                background: #f7f7f9;
                color: #222;
                min-height: 100vh;
                display: flex;
                flex-direction: column;
            }

            .navbar {
                background: #fff;
                border-radius: 0 0 24px 24px;
                box-shadow: 0 2px 16px 0 rgba(34, 34, 34, 0.06);
                padding: 0.75rem 0;
            }

            .navbar-brand {
                font-family: 'Roboto', sans-serif;
                font-size: 2rem;
                font-weight: 700;
                letter-spacing: 1px;
                color: #1a2233 !important;
            }

            .nav-link {
                color: #222 !important;
                font-weight: 500;
                font-size: 1rem;
                margin-right: 1rem;
                transition: color 0.2s;
            }

            .nav-link:hover,
            .nav-link.active {
                color: #E60012 !important;
            }

            .navbar .dropdown-menu {
                border-radius: 12px;
                box-shadow: 0 4px 24px 0 rgba(34, 34, 34, 0.08);
                border: none;
            }

            .navbar .dropdown-item:hover {
                background: #fff0f0;
                color: #1a2233;
            }

            .avatar {
                border: 2px solid #E60012;
                box-shadow: 0 2px 8px 0 rgba(34, 34, 34, 0.08);
            }

            main.container {
                flex: 1 0 auto;
                padding-top: 48px;
                padding-bottom: 48px;
            }

            footer {
                background: #fff;
                border-top: 1px solid #eee;
                padding: 32px 0 16px 0;
                font-size: 1rem;
                color: #888;
            }

            .footer-logo {
                font-family: 'Roboto', sans-serif;
                font-size: 1.25rem;
                color: #1a2233;
                font-weight: 700;
            }

            .footer-social a {
                color: #888;
                margin: 0 8px;
                font-size: 1.5rem;
                transition: color 0.2s;
            }

            .footer-social a:hover {
                color: #E60012;
            }

            @media (max-width: 767px) {
                .navbar {
                    border-radius: 0 0 12px 12px;
                }

                main.container {
                    padding-top: 24px;
                    padding-bottom: 24px;
                }
            }
        </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg sticky-top shadow-sm">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="/assets/logo-sharp.svg" alt="Logo" width="150" class="me-2">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-lg-center">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="lessonsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="ri-book-2-line me-1"></i>Bài học
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="lessonsDropdown">
                            <li><a class="dropdown-item" href="/alphabets/hiragana">Hiragana</a></li>
                            <li><a class="dropdown-item" href="/alphabets/katakana">Katakana</a></li>
                            <li><a class="dropdown-item" href="/vocabulary">Từ vựng</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="gamesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="ri-gamepad-line me-1"></i>Games
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="gamesDropdown">
                            <li><a class="dropdown-item" href="/games">Chơi game</a></li>
                            <li><a class="dropdown-item" href="/leaderboard">Bảng xếp hạng</a></li>
                        </ul>
                    </li>
                </ul>
                <div class="navbar-nav ms-lg-3">
                    <% if (locals.user) { %>
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                                <img src="https://ui-avatars.com/api/?name=<%= encodeURIComponent(user.fullname) %>&background=E60012&color=fff&bold=true" alt="Avatar" class="rounded-circle avatar me-2" width="36" height="36">
                                <span class="d-none d-lg-block" style="font-weight:600;">
                                    <%= user.fullname %>
                                </span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/profile"><i class="ri-user-line me-2"></i>Hồ sơ</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li>
                                    <form action="/auth/logout" method="POST" style="margin: 0;">
                                        <button type="submit" class="dropdown-item text-danger" style="width: 100%; text-align: left; border: none; background: none;">
                                            <i class="ri-logout-box-r-line me-2"></i>Đăng xuất
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                        <% } else { %>
                            <a class="btn btn-outline-dark ms-2" href="/auth/login"><i class="ri-login-box-line me-1"></i>Đăng nhập</a>
                            <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Page content -->
    <main class="container">
        <%- body %>
    </main>

    <!-- Footer -->
    <footer class="text-center mt-auto">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-md-start mb-2 mb-md-0">
                    <span class="footer-logo">Lớp học tiếng Nhật SMV</span> &copy; 2025
                </div>
                <div class="col-md-6 text-md-end footer-social">
                    <a href="#"><i class="ri-facebook-line"></i></a>
                    <a href="#"><i class="ri-twitter-line"></i></a>
                    <a href="#"><i class="ri-instagram-line"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="/js/main.js"></script>
    <%- typeof script !=='undefined' ? script : '' %>
</body>

</html>